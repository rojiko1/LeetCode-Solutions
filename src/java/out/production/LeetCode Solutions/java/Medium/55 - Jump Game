class Solution {

    public boolean canJump(int[] nums) {
        int maxIndex = nums[0];
        for (int i = 1; i < nums.length; i++) {
            if (i > maxIndex) {
                return false;
            }
            else {
                maxIndex = Math.max(maxIndex, i + nums[i]);
                if (maxIndex >= (nums.length - 1)) {
                    return true;
                }
            }
        }
        return true;
    }

}