class Solution {

    public int lengthOfLastWord(String s) {
        int index = s.length() - 1;
        int count = 0;
        while (s.charAt(index) == ' ') {
            index--;
        }
        while (index >= 0) {
            if (Character.isLetter(s.charAt(index))) {
                count++;
                index--;
            }
            else {
                break;
            }
        }
        return count;
    }

}