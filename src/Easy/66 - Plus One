class Workspace.Solution {

    public int[] plusOne(int[] digits) {
        for (int i = digits.length - 1; i >= 0; i--) {
            if (digits[i] == 9) {
                digits[i] = 0;
            }
            else {
                digits[i]++;
                return digits;
            }
        }
        int[] answer = new int[digits.length + 1];
        answer[0] = 1;
        for (int i = 1; i < answer.length; i++) {
            answer[i] = 0;
        }
        return answer;
    }

}